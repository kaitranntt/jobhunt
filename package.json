{
  "name": "jobhunt",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev -H 0.0.0.0 --port 3000",
    "build": "./scripts/validate-build.sh && next build",
    "start": "next start --port 3000",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "validate": "./scripts/validate-build.sh",
    "precommit": "yarn lint && yarn typecheck && yarn test"
  },
