{
  "name": "jobhunt",
  "version": "0.1.0",
  "description": "Modern job application tracking system with Kanban board interface",
  "repository": {
    "type": "git",
    "url": "https://github.com/kaitranntt/jobhunt.git"
  },
  "keywords": [
    "job-tracker",
    "job-hunt",
    "application-tracker",
    "kanban",
    "nextjs",
    "supabase",
    "typescript"
  ],
  "author": "Kai Tran",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/kaitranntt/jobhunt/issues"
  },
  "homepage": "https://github.com/kaitranntt/jobhunt#readme",
  "scripts": {
    "dev": "next dev -H 0.0.0.0 --port 3000",
    "build": "./scripts/validate-build.sh && next build",
    "start": "next start --port 3000",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "test:integration": "vitest run --config vitest.integration.config.mts",
    "test:performance": "vitest run --config vitest.performance.config.mts",
    "test:e2e": "yarn playwright test",
    "test:all": "./scripts/test-runner.sh",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "validate": "./scripts/validate-build.sh",
    "precommit": "yarn lint && yarn typecheck && yarn test",
    "prepare": "husky",
    "benchmark:performance": "yarn test:performance --reporter=verbose",
    "benchmark:database": "yarn test src/performance/__tests__/database-performance.test.ts",
    "benchmark:api": "yarn test src/performance/__tests__/api-performance.test.ts",
    "security:audit": "yarn audit --level moderate",
    "security:check": "yarn lint && yarn typecheck && yarn security:audit"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,yml,yaml}": [
      "prettier --write"
    ]
  },
  "dependencies": {
    "@dnd-kit/core": "^6.1.0",
    "@dnd-kit/sortable": "^8.0.0",
    "@dnd-kit/utilities": "^3.2.2",
    "@hookform/resolvers": "^5.2.2",
    "@radix-ui/react-alert-dialog": "^1.1.15",
    "@radix-ui/react-avatar": "^1.1.10",
    "@radix-ui/react-checkbox": "^1.3.3",
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-dropdown-menu": "^2.1.16",
    "@radix-ui/react-icons": "^1.3.2",
    "@radix-ui/react-label": "^2.1.7",
    "@radix-ui/react-progress": "^1.1.7",
    "@radix-ui/react-select": "^2.2.6",
    "@radix-ui/react-switch": "^1.2.6",
    "@radix-ui/react-tabs": "^1.1.13",
    "@radix-ui/react-tooltip": "^1.2.8",
    "@supabase/ssr": "^0.7.0",
    "@supabase/supabase-js": "^2.58.0",
    "@testing-library/dom": "^10.4.1",
    "@vercel/analytics": "^1.5.0",
    "@vercel/speed-insights": "^1.2.0",
    "date-fns": "^4.1.0",
    "next": "15.5.4",
    "react": "18",
    "react-dom": "18",
    "react-hook-form": "^7.63.0",
    "zod": "^4.1.11"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.6.0",
    "@commitlint/config-conventional": "^19.6.0",
    "@eslint/eslintrc": "^3",
    "@next/eslint-plugin-next": "15.5.4",
    "@radix-ui/react-slot": "^1.2.3",
    "@tailwindcss/postcss": "^4",
    "@tailwindcss/vite": "^4.1.14",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/jsdom": "^27",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@vitejs/plugin-react": "^5.0.4",
    "@vitest/coverage-v8": "3.2.4",
    "@vitest/ui": "^3.2.4",
    "@playwright/test": "^1.40.0",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "eslint": "^9",
    "eslint-config-next": "15.5.4",
    "eslint-plugin-react-hooks": "^6.1.0",
    "globals": "^16.4.0",
    "husky": "^9.1.7",
    "jsdom": "^27.0.0",
    "lint-staged": "^15.3.0",
    "lucide-react": "^0.544.0",
    "prettier": "^3.6.2",
    "tailwind-merge": "^3.3.1",
    "tailwindcss": "^4",
    "typescript": "^5",
    "vite": "^7.1.8",
    "vitest": "^3.2.4"
  },
  "packageManager": "yarn@4.10.3"
}
